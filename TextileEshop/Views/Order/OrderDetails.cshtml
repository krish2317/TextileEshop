@model TextileEshop.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-5">
    <h2 class="text-center">📦 Order Details - #@Model.Id</h2>
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Order Summary</h5>
            <p><strong>Date:</strong> @Model.OrderDate.ToString("dd MMM yyyy, hh:mm tt")</p>
            <p><strong>Status:</strong> <span class="badge bg-success">@Model.Status</span></p>
            <p><strong>Payment Method:</strong> @Model.Payment.PaymentMethod</p>
            <p><strong>Total Amount:</strong> $@Model.Payment.Amount</p>
        </div>
    </div>

    <h4 class="mt-4">🛍️ Ordered Items</h4>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Product</th>
                    <th>Image</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td><img src="@item.Product.ImageUrl" width="50"></td>
                        <td>@item.Quantity</td>
                        <td>$@item.Product.Price</td>
                        <td><strong>$@(item.Quantity * item.Product.Price)</strong></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a href="@Url.Action("OrderHistory", "Order")" class="btn btn-secondary mt-3">Back to Order History</a>
</div>
